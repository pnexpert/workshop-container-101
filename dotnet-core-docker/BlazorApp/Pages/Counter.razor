@page "/counter"
@using Microsoft.Extensions.Logging;
@inject ILogger<Counter> logger;

<h1>Counter</h1>

<p>Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementInformation">info</button>
<button class="btn btn-primary" @onclick="IncrementWarning">warn</button>
<button class="btn btn-primary" @onclick="IncrementError">fail</button>
<button class="btn btn-primary" @onclick="IncrementCritical">crit</button>

@code {
    private int currentCount = 0;
    private void IncrementInformation()
    {
        logger.LogInformation("Information message.");
        currentCount++;
    }
    private void IncrementWarning()
    {
        logger.LogWarning("Warning message.");
        currentCount++;
    }
    private void IncrementError()
    {
        logger.LogError("Error message.");
        currentCount++;
    }
    private void IncrementCritical()
    {
        logger.LogCritical("Critical message.");
        currentCount++;
    }
}
